<UserControl x:Class="SaveFolders.Views.JobsListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveFolders.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Contenu principal qui prend tout l'espace -->
            <RowDefinition Height="Auto" />
            <!-- Boutons en bas, hauteur automatique -->
        </Grid.RowDefinitions>

        <!-- Liste qui remplit l'espace restant -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="SaveJobsPanel" />
        </ScrollViewer>

        <!-- Boutons en bas, centrés -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
            <Button x:Name="bt_ajouter" Content="Ajouter +" Width="100" Margin="5" Height="50" Click="Ajouter_Click" Background="#FF05AD00" />
            <Button x:Name="bt_start" Content="Lancer la sauvegarde 🔄" Width="150" Margin="5" Height="50" Click="Lancer_Click" Background="#FF1354F1" />
        </StackPanel>
    </Grid>

</UserControl>
