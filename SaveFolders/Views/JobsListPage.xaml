<UserControl x:Class="SaveFolders.Views.JobsListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveFolders.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <DockPanel Margin="10">

        <!-- Liste -->
        <ListBox x:Name="SaveJobsListBox" DisplayMemberPath="SourcePath" DockPanel.Dock="Top" Height="300" />

        <!-- Boutons en bas -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,10,0,0" >
            <Button x:Name="bt_ajouter" Content="Ajouter" Width="100" Margin="5" Click="Ajouter_Click" />
            <Button x:Name="bt_supprimer" Content="Supprimer" Width="100" Margin="5" Click="Supprimer_Click" />
            <Button x:Name="bt_start" Content="Lancer la sauvegarde" Width="150" Margin="5" Click="Lancer_Click" />
        </StackPanel>

    </DockPanel>
</UserControl>
